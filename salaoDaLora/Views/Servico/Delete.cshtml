@model salaoDaLora.Models.Servico

@{
    ViewData["Title"] = "Excluir Serviço";
}

<h1>@ViewData["Title"]</h1>

<h4>Tem certeza que deseja excluir este serviço?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">Preço</dt>
    <dd class="col-sm-10">@Model.Preco</dd>

</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ServicoId" />
    <div class="form-group">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
