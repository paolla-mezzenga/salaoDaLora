@model salaoDaLora.Models.Servico

@{
    ViewData["Title"] = "Detalhes do Serviço";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Serviço</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.Preco</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ServicoId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
