@model salaoDaLora.Models.Agendamento

@{
    ViewData["Title"] = "Novo Agendamento";
}

<h1>@ViewData["Title"]</h1>

<hr />
<span asp-validation-summary="ModelOnly" class="text-danger"></span>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DataAgendamento" class="control-label">Data do Agendamento</label>
        <input asp-for="DataAgendamento" class="form-control" />
        <span asp-validation-for="DataAgendamento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClienteId" class="control-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfissionalId" class="control-label">Profissional</label>
        <select asp-for="ProfissionalId" class="form-control" asp-items="ViewBag.ProfissionalId"></select>
        <span asp-validation-for="ProfissionalId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServicoId" class="control-label">Serviço</label>
        <select asp-for="ServicoId" class="form-control" asp-items="ViewBag.ServicoId"></select>
        <span asp-validation-for="ServicoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
