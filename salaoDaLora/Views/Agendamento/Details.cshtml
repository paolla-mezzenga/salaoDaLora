@model salaoDaLora.Models.Agendamento

@{
    ViewData["Title"] = "Detalhes do Agendamento";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Agendamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Data do Agendamento</dt>
        <dd class="col-sm-10">@Model.DataAgendamento.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente.Nome</dd>

        <dt class="col-sm-2">Profissional</dt>
        <dd class="col-sm-10">@Model.Profissional.Nome</dd>

        <dt class="col-sm-2">Serviço</dt>
        <dd class="col-sm-10">@Model.Servico.Descricao</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AgendamentoId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
